!!!
%html
	%head
		%title SWCT Inventory App
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		%nav.navbar.navbar-inverse
			.container
				.navbar-header
					%button.navbar-toggle{"data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
						%span.sr-only Toggle navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					= link_to 'Home', root_path, class: 'navbar-brand'
				#navbarCollapse.collapse.navbar-collapse
					%ul.nav.navbar-nav
						%li= link_to 'Cards', card_sets_path
						%li= link_to 'Machines/Devicers', machines_path
						%li= link_to 'Inventory Management', inventories_path
					%ul.nav.navbar-nav.navbar-right
						- if user_signed_in?
							%li= link_to 'Edit Account',edit_user_registration_path(current_user)
							%li= link_to 'Sign Out'.html_safe, destroy_user_session_path, :method => :delete
						- else
							%li= link_to 'Sign In', new_user_session_path
		.row
			.col-md-10.col-md-offset-1
				.container
					- if flash[:notice]
						.alert.alert-success= flash[:notice]
					- elsif flash[:error]
						.alert.alert-danger= flash[:error]
					= yield