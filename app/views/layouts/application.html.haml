!!!
%html
	%head
		%title SWCT Inventory App
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		.navbar.navbar-inverse
			.container
				= link_to 'Home', root_path, class: 'navbar-brand'
				= link_to 'Card Management', card_sets_path, class: 'btn btn-default navbar-btn'
				= link_to 'Machine/Device Management', machines_path, class: 'btn btn-default navbar-btn'
				= link_to 'Inventory Management', inventories_path, class: 'btn btn-default navbar-btn'
		.row
			.col-md-10.col-md-offset-1
				- if flash[:notice]
					.alert.alert-success= flash[:notice]
				= yield