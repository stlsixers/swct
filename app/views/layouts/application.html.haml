!!!
%html
	%head
		%title= yield(:title)
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= javascript_include_tag :defaults
		= csrf_meta_tags
	%body
		%nav.navbar.navbar-inverse
			.container
				.navbar-header
					%button.navbar-toggle{"data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
						%span.sr-only Toggle navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					= link_to 'Home', root_path, class: 'navbar-brand'
				#navbarCollapse.collapse.navbar-collapse
					%ul.nav.navbar-nav
						%li.dropdown
							= link_to 'Cards Management <span class="caret"></span>'.html_safe, '#'
							%ul.dropdown-menu
								%li= link_to 'Create New Card Set', new_card_set_path
								%li= link_to 'View All Card Sets', card_sets_path
								%li= link_to 'Create New Card', new_card_path
								%li= link_to 'View All Cards', cards_path
						%li= link_to 'Machines/Devices', machines_path
						%li.dropdown
							= link_to 'Inventory Management <span class="caret"></span>'.html_safe, '#'
							%ul.dropdown-menu
								%li= link_to 'List New Pull', new_inventory_path
								%li= link_to 'View Inventory Logs', inventories_path
					%ul.nav.navbar-nav.navbar-right
						- if user_signed_in?
							%li= link_to 'Edit Account',edit_user_registration_path(current_user)
							%li= link_to 'Sign Out'.html_safe, destroy_user_session_path, :method => :delete
						- else
							%li= link_to 'Sign In', new_user_session_path
		.row
			.col-md-10.col-md-offset-1
				.container
					- if flash[:notice]
						.alert.alert-success= flash[:notice]
					- elsif flash[:error]
						.alert.alert-danger= flash[:error]
					= yield