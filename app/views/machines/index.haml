%h1 Machines/Devices
%p= link_to 'Create New Machine/Device', new_machine_path, class: 'btn btn-primary'\

= smart_listing_controls_for(:machines, {class: "form-inline text-right"}) do
	.form-group.filter.input-append
		= text_field_tag :filter, '', class: "search form-control", placeholder: "Search Device #...", autocomplete: "off"
		%button.btn-primary.disabled{type: "submit"}
			%span.glyphicon.glyphicon-search
%p
= smart_listing_render(:machines)